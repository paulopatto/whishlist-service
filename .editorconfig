# EditorConfig is awesome: http://EditorConfig.org

root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation
[*.{py}]
indent_style = space
indent_size = 4
max_line_length = 79

# 2 space indentation
[*.{txt,md,yml,yaml,json}]
indent_style = space
indent_size = 2